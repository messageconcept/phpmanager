        <Condition Message="This application requires .NET Framework 3.5 SP1. Please install the .NET Framework then run this installer again.">
            <![CDATA[Installed OR (VersionNT >= 602) OR (VersionNT >=600 AND VersionNT < 602 AND NETFRAMEWORK35_SP_LEVEL AND NOT NETFRAMEWORK35_SP_LEVEL = "#0")]]>
        </Condition>

